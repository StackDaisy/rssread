<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="35dip" android:gravity="center_vertical"
	android:paddingLeft="5dip" android:background="#f0f0f0">

	<ImageView android:id="@+id/header" android:src="@drawable/icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	
	<TextView android:id="@+id/title0" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="16dip"
		android:paddingLeft="6dip" android:text="旺财阅读" android:textColor="#666666" />

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:gravity="right|center_vertical" android:paddingRight="5dip">

		<TextView android:id="@+id/title" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="11dip"
			android:paddingRight="5dip" />

		<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>